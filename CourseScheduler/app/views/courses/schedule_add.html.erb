<%- model_class = Course -%>
<div class="page-header">
  <h1><%=t '.title', :default => [:'helpers.titles.add', 'Add %{model}'], :model => model_class.model_name.human.titleize %></h1>
</div>

<table class="table table-striped">
  <thead>
  <tr>
    <th><%= model_class.human_attribute_name(:id) %></th>
    <th><%= model_class.human_attribute_name(:course_name) %></th>
    <th><%= model_class.human_attribute_name(:description) %></th>
    <th><%= model_class.human_attribute_name(:course_number) %></th>
    <th><%= model_class.human_attribute_name(:department) %></th>
    <th><%= model_class.human_attribute_name(:prerequisite_course_number) %></th>
    <th><%=t '.actions', :default => t("helpers.actions") %></th>
  </tr>
  </thead>
  <tbody>
  <% if @courses != nil %>
      <% @courses.each do |course| %>
          <tr>
            <td><%= course.id %></td>
            <td><%= course.course_name %></td>
            <td><%= course.description %></td>
            <td><%= course.course_number %></td>
            <td><%= course.department %></td>
            <td><%= course.prerequisite_course_number %></td>
            <td>
              <%= link_to t('.select', :default => t("helpers.links.select")),
                          { :controller => "users", :action => "add_course", :id => course.id }, :class => 'btn btn-default btn-xs' %>
            </td>
          </tr>
      <% end %>
  <% end %>
  </tbody>
</table>

<%= link_to t('.back', :default => t("helpers.links.back")),
            users_path, :class => 'btn btn-default'  %>
