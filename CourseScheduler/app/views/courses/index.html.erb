  <thead>
    <tr>
      <%= render :partial => "courses/course_model", locals: {fparam: model_class} %>
    </tr>
  </thead>
  <tbody>
    <% if @courses != nil %>
    <% @courses.each do |course| %>
      <tr>
        <%= render :partial => "course_info", locals: {fparam: course} %>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

