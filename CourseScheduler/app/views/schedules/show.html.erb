<%- model_class = Schedule -%>
<div class="page-header">
  <h1><%=t '.title', :default => "My Account" %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:users_id) %>:</strong></dt>
  <dd><%= current_user.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:courses_id) %>:</strong></dt>
  <dd><%= current_user.first_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:semester) %>:</strong></dt>
  <dd><%= current_user.last_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:year) %>:</strong></dt>
  <dd><%= current_user.street_address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:complete) %>:</strong></dt>
  <dd><%= current_user.phone_number %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
            users_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
            edit_schedule_path(@schedule), :class => 'btn btn-default' %>
